<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean name = "Service" class = "firstPack.JavaContactService" scope ="singleton">

        <property name="contactDao">
            <bean name = "ContactDAO" class = "firstPack.DAO.ContactDao" scope = "singleton"/>
        </property>

        <property name="hobbyDao">
            <bean name = "HobbyDAO" class = "firstPack.DAO.HobbyDao" scope = "singleton"/>
        </property>

        <property name="messageDao">
            <bean name = "MessageDAO" class = "firstPack.DAO.MessageDao" scope = "singleton"/>
        </property>

        <property name="placeDao">
         <bean name = "PlaceDAO" class = "firstPack.DAO.PlaceDao" scope = "singleton"/>
        </property>

    </bean>

</beans>